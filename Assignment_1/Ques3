#include<iostream>
using namespace std;

int main(){
    cout<<"Enter the Number  of Rows :-"<<endl;
    int N,M;
    cin>>N;
    cout<<"Enter Number of Elements in per row :-"<<endl;
    cin>>M;
    int arr[N][M];
    for(int i=0; i<N; i++){
        for(int j=0; j<M; j++){
            cin>>arr[i][j];
        }
        cout<<endl;
    }
    cout<<"Matrix after reversed :-"<<endl;
    for(int i=0; i<N; i++){
        for(int j=M-1; j>=0;j--){
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
    return 0;
}
